<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.two.weiava.activities.QnrActivity">

    <Button
        android:id="@+id/button_gds"
        android:layout_width="384dp"
        android:layout_height="252dp"
        android:text="GDS"
        android:textSize="120sp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_adl"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_adl"
        android:layout_width="384dp"
        android:layout_height="252dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="ADL"
        android:textColor="@android:color/white"
        android:textSize="120sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gds" />
</android.support.constraint.ConstraintLayout>
