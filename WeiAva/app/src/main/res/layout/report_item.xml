<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">
    <!--android:background="#4297cb">-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/test_date_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorwhite"
            android:text="Test Date"/>

        <TextView
            android:id="@+id/test_score_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorwhite"
            android:text="Score"/>

<!--        <TextView
            android:id="@+id/test_type_View"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Test Type:"
            android:textColor="@color/colorwhite"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/test_id_View"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Test ID:"
            android:textColor="@color/colorwhite"
            android:visibility="invisible"/>-->
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:background="@color/colorSecondary"
        android:textColor="@color/colorwhite"
        android:text="Details" />

</LinearLayout>
